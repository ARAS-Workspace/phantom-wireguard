{
  "name": "phantom-asset-generator",
  "version": "1.0.0",
  "description": "Phantom Asset Generator Automation for dynamically generating visual assets",
  "main": "generate-assets.js",
  "scripts": {
    "generate": "node generate-assets.js",
    "generate:custom": "node generate-assets.js",
    "generate:help": "node generate-assets.js --help",
    "generate:pdf": "node generate-pdf.js",
    "generate:all": "npm run generate && npm run generate:pdf",
    "clean": "rm -rf output/*",
    "install-deps": "npm install"
  },
  "dependencies": {
    "png-to-ico": "^2.1.8",
    "puppeteer": "^23.11.1",
    "sharp": "^0.33.0"
  }
}
