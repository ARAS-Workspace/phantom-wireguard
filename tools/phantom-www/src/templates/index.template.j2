<!DOCTYPE html>
<!--suppress HtmlUnknownTarget -->
<html lang="{{ lang }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>Phantom-WG</title>

    <!-- Primary Meta Tags -->
    <meta name="title" content="Phantom-WG">
    <meta name="description" content="Self-hosted WireGuard VPN with advanced privacy modes. Fast, secure, and open-source. Deploy Core, Ghost, Multihop, or MultiGhost configurations on your own infrastructure.">
    <meta name="keywords" content="VPN, WireGuard, self-hosted, privacy, security, open source, Ghost mode, Multihop, obfuscation, DPI bypass">
    <meta name="author" content="Rıza Emre ARAS">
    <meta name="robots" content="index, follow">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://www.phantom.tc/">
    <meta property="og:title" content="Phantom-WG">
    <meta property="og:description" content="Self-hosted WireGuard VPN with advanced privacy modes. Fast, secure, and open-source.">
    <meta property="og:image" content="https://www.phantom.tc/assets/images/og-image.png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:locale" content="en_US">
    <meta property="og:site_name" content="Phantom-WG">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="https://www.phantom.tc/">
    <meta name="twitter:title" content="Phantom - Your Server, Your Privacy">
    <meta name="twitter:description" content="Self-hosted WireGuard VPN with advanced privacy modes. Fast, secure, and open-source.">
    <meta name="twitter:image" content="https://www.phantom.tc/assets/images/og-image.png">

    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="assets/favicons/favicon.ico">
    <link rel="icon" type="image/png" sizes="16x16" href="assets/favicons/favicon-16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="assets/favicons/favicon-32.png">
    <link rel="icon" type="image/png" sizes="48x48" href="assets/favicons/favicon-48.png">
    <link rel="icon" type="image/png" sizes="96x96" href="assets/favicons/favicon-96.png">
    <link rel="icon" type="image/png" sizes="192x192" href="assets/favicons/favicon-192.png">

    <!-- Apple Touch Icons -->
    <link rel="apple-touch-icon" sizes="60x60" href="assets/favicons/apple-touch-icon-60.png">
    <link rel="apple-touch-icon" sizes="76x76" href="assets/favicons/apple-touch-icon-76.png">
    <link rel="apple-touch-icon" sizes="120x120" href="assets/favicons/apple-touch-icon-120.png">
    <link rel="apple-touch-icon" sizes="152x152" href="assets/favicons/apple-touch-icon-152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="assets/favicons/apple-touch-icon-180.png">

    <!-- Web App Manifest -->
    <link rel="manifest" href="manifest.json">
    <meta name="theme-color" content="#10B981">
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="Phantom">

    <!-- Canonical URL -->
    <link rel="canonical" href="https://www.phantom.tc/">

    <!-- Preload Critical Resources -->
    <link rel="preload" href="assets/fonts/orbitron-600.ttf" as="font" type="font/ttf" crossorigin="anonymous">
    <link rel="preload" href="assets/fonts/orbitron-700.ttf" as="font" type="font/ttf" crossorigin="anonymous">
    <link rel="preload" href="assets/fonts/inter-400.ttf" as="font" type="font/ttf" crossorigin="anonymous">

    <!-- Phantom Styles -->
    <link rel="stylesheet" href="assets/css/fonts.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" href="assets/css/module-cards.css">
    <link rel="stylesheet" href="assets/css/module-lightbox.css">
    <link rel="stylesheet" href="assets/css/crypto-cards.css">
    <link rel="stylesheet" href="assets/css/language-switcher.css">
    <link rel="stylesheet" href="assets/css/wizard-section.css">
    <link rel="stylesheet" href="assets/css/print.css">

</head>
<body>
    <!-- Page Loader -->
    <div id="pageLoader" class="page-loader">
        <div class="loader-spinner"></div>
        <div class="loader-text">Initializing</div>
        <div class="loader-progress">
            <div class="loader-progress-bar"></div>
        </div>
    </div>
    <div class="container">
        <div class="phantom-grid">
            <!-- Logo Section -->
            <div class="grid-section logo-section">
                <div class="logo-container">
                    <img src="{{ hero.logo }}"
                         alt="{{ hero.logo_alt }}"
                         class="phantom-logo"
                         fetchpriority="high">
                </div>

                <!-- Language Switcher -->
                <div class="language-switcher" data-current-lang="{{ lang }}">
                    {% if lang == 'en' %}
                     <button class="lang-btn" data-lang="tr" aria-label="Switch to Turkish">
                        <svg class="flag-icon">
                            <use href="assets/icons/sprite.svg#flag-tr"></use>
                        </svg>
                        <span>TR</span>
                    </button>
                    <button class="lang-btn lang-btn-active" data-lang="en" aria-label="English (Active)">
                        <svg class="flag-icon">
                            <use href="assets/icons/sprite.svg#flag-us"></use>
                        </svg>
                        <span>EN</span>
                    </button>
                    {% else %}
                    <button class="lang-btn lang-btn-active" data-lang="tr" aria-label="Türkçe (Aktif)">
                        <svg class="flag-icon">
                            <use href="assets/icons/sprite.svg#flag-tr"></use>
                        </svg>
                        <span>TR</span>
                    </button>
                    <button class="lang-btn" data-lang="en" aria-label="Switch to English">
                        <svg class="flag-icon">
                            <use href="assets/icons/sprite.svg#flag-us"></use>
                        </svg>
                        <span>EN</span>
                    </button>
                    {% endif %}
                </div>
            </div>

            <!-- Install Section -->
            <div class="grid-section install-section">
                <div class="install-label">{{ install.title }}</div>
                <div class="install-container">
                    <pre class="install-command">{{ install.command }}</pre>
                    <button id="copyBtn" aria-label="Copy install command">
                        <svg class="phantom-icon">
                            <use href="assets/icons/sprite.svg#icon-copy"></use>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Module Cards Section -->
            <div class="grid-section modules-section">
                <div class="module-cards">
                    {% for module in modules %}
                    <!-- {{ module.title }} Module Card -->
                    <div class="module-card" data-module="{{ module.id }}">
                        <div class="module-icon">
                            <svg class="phantom-icon">
                                <use href="assets/icons/sprite.svg#icon-{{ module.icon }}"></use>
                            </svg>
                        </div>
                        <div class="module-label">{{ module.label }}</div>
                        <div class="module-mini-desc">{{ module.mini_desc }}</div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Features Section -->
            <div class="grid-section features-section">
                <div class="feature-slider">
                    <div class="slider-container" id="sliderContainer">
                        {% for slide in features.slides %}
                        <!-- Feature Slide {{ loop.index }} -->
                        <div class="feature-slide">
                            <div class="feature-icon">
                                <svg class="phantom-icon">
                                    <use href="assets/icons/sprite.svg#icon-{{ slide.icon }}"></use>
                                </svg>
                            </div>
                            <div class="feature-content">
                                <h3 class="feature-title">{{ slide.title }}</h3>
                                <p class="feature-description">{{ slide.description }}</p>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="slider-controls" id="sliderControls">
                        <!-- Slider dots will be generated by JavaScript based on slide count -->
                    </div>
                </div>
            </div>

            <!-- Wizard Deployment Section -->
            <div class="grid-section wizard-section">
                <div class="wizard-container">
                    <!-- Header with Icon -->
                    <div class="wizard-header">
                        <div class="wizard-icon">
                            <svg class="phantom-icon">
                                <use href="assets/icons/sprite.svg#icon-{{ wizard.icon }}"></use>
                            </svg>
                        </div>
                        <h2 class="wizard-title">{{ wizard.title }}</h2>
                    </div>

                    <!-- Features Strip -->
                    <div class="wizard-features">
                        {% for feature in wizard.features %}
                        <span>{{ feature }}</span>
                        {% if not loop.last %}<span class="wizard-separator">•</span>{% endif %}
                        {% endfor %}
                    </div>

                    <!-- Buttons -->
                    <div class="wizard-buttons">
                        <a href="{{ wizard.mainnet.url }}"
                           class="wizard-btn wizard-btn-primary"
                           target="_blank"
                           rel="noopener noreferrer"
                           aria-label="{{ wizard.mainnet.label }}">
                            <svg class="phantom-icon">
                                <use href="assets/icons/sprite.svg#icon-{{ wizard.mainnet.icon }}"></use>
                            </svg>
                            <span>{{ wizard.mainnet.label }}</span>
                        </a>

                        <a href="{{ wizard.onion.url }}"
                           class="wizard-btn wizard-btn-secondary"
                           target="_blank"
                           rel="noopener noreferrer"
                           aria-label="{{ wizard.onion.label }}">
                            <svg class="phantom-icon">
                                <use href="assets/icons/sprite.svg#icon-{{ wizard.onion.icon }}"></use>
                            </svg>
                            <span>{{ wizard.onion.label }}</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Navigation Section -->
            <div class="grid-section nav-section">
                <nav class="links-container">
                    {% for link in footer.links %}
                    <a href="{{ link.url }}" class="nav-link"{% if link.id %} id="{{ link.id }}"{% endif %}>{{ link.text }}</a>
                    {% endfor %}
                </nav>
            </div>
        </div>
    </div>

    <!-- Module Lightbox Modal -->
    <div class="phantom-lightbox" id="moduleLightbox">
        <div class="lightbox-overlay"></div>
        <div class="lightbox-content">
            <button class="lightbox-close" aria-label="Close">
                <span>×</span>
            </button>

            <!-- Dynamic content will be loaded here -->
            <div class="lightbox-inner" id="lightboxInner">
                <!-- Content will be dynamically inserted -->
            </div>
        </div>
    </div>

    <!-- Donate Modal -->
    <div class="phantom-lightbox" id="donateModal">
        <div class="lightbox-overlay"></div>
        <div class="lightbox-content">
            <button class="lightbox-close" aria-label="Close">
                <span>×</span>
            </button>

            <div class="lightbox-inner">
                <div class="donate-detail">
                    <div class="donate-header">
                        <h2 class="donate-title">{{ donate.title }}</h2>
                        <p class="donate-description">
                            {{ donate.description }}
                        </p>
                    </div>

                    <div class="donate-body">
                        <div class="crypto-cards">
                            <!-- Bitcoin Card -->
                            <div class="crypto-card">
                                <div class="crypto-header">
                                    <div class="crypto-icon">
                                        <svg class="phantom-icon">
                                            <use href="assets/icons/sprite.svg#icon-{{ donate.bitcoin.icon }}"></use>
                                        </svg>
                                    </div>
                                    <div class="crypto-info">
                                        <h3 class="crypto-name">{{ donate.bitcoin.name }}</h3>
                                        <span class="crypto-network">{{ donate.bitcoin.network }}</span>
                                    </div>
                                </div>
                                <div class="crypto-address-container">
                                    <code class="crypto-address" id="btcAddress">{{ donate.bitcoin.address }}</code>
                                    <button class="crypto-copy-btn" data-crypto="btc" aria-label="Copy Bitcoin address">
                                        <svg class="phantom-icon">
                                            <use href="assets/icons/sprite.svg#icon-copy"></use>
                                        </svg>
                                    </button>
                                </div>
                                <div class="crypto-qr-container">
                                    <!-- QR code will be added later -->
                                    <div class="crypto-qr-placeholder">
                                        <img src='{{ donate.bitcoin.qr_image }}' alt="BTC Donation Address QR Code">
                                    </div>
                                </div>
                            </div>

                            <!-- Monero Card -->
                            <div class="crypto-card">
                                <div class="crypto-header">
                                    <div class="crypto-icon">
                                        <svg class="phantom-icon">
                                            <use href="assets/icons/sprite.svg#icon-{{ donate.monero.icon }}"></use>
                                        </svg>
                                    </div>
                                    <div class="crypto-info">
                                        <h3 class="crypto-name">{{ donate.monero.name }}</h3>
                                        <span class="crypto-network">{{ donate.monero.network }}</span>
                                    </div>
                                </div>
                                <div class="crypto-address-container">
                                    <code class="crypto-address" id="xmrAddress">{{ donate.monero.address }}</code>
                                    <button class="crypto-copy-btn" data-crypto="xmr" aria-label="Copy Monero address">
                                        <svg class="phantom-icon">
                                            <use href="assets/icons/sprite.svg#icon-copy"></use>
                                        </svg>
                                    </button>
                                </div>
                                <div class="crypto-qr-container">
                                    <!-- QR code will be added later -->
                                    <div class="crypto-qr-placeholder">
                                        <img src='{{ donate.monero.qr_image }}' alt="XMR Donation Address QR Code">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Module Templates (Hidden) -->
    <div style="display: none;">
        {% for module in modules %}
        <!-- {{ module.title }} Module Template -->
        <template id="{{ module.id }}-template">
            {{ module.detail_html|safe }}
        </template>
        {% endfor %}
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p class="copyright copyright-main">{{ footer.copyright }}</p>
        <p class="copyright copyright-trademark">{{ footer.trademark }}</p>
        <p class="copyright copyright-disclaimer">{{ footer.disclaimer }}</p>
    </footer>

    <!-- Phantom JavaScript -->
    <script src="assets/js/console-branding.js"></script>
    <script src="assets/js/phantom.js"></script>
    <script src="assets/js/module-lightbox.js"></script>
    <script src="assets/js/donate-modal.js"></script>
    <script src="assets/js/language-switcher.js"></script>
    {% if env == 'dev' %}
    <!-- Development Auto-Reload -->
    <script src="assets/js/auto-reload.js"></script>
    {% endif %}
</body>
</html>